{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "moduleResolution": "node",
    // Allows us to use "core/something" instead of "src/core/something"
    "baseUrl": "./src",
    // We'll need to transform the import paths so that "core/something" becomes "./core/something" in the produced JS files
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    // For transform
    "paths": {
      "*": [
        "*"
      ],
    },
    "noImplicitAny": true,
    "strict": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test*"
  ]
}
